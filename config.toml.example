# sniproxy-ng 配置文件示例

[server]
# 监听地址 (TCP 和 UDP 都会监听此地址)
listen_addr = "0.0.0.0:443"

# 日志级别: trace, debug, info, warn, error
log_level = "info"

# 日志格式: json, pretty
log_format = "pretty"

[socks5]
# SOCKS5 代理地址
addr = "127.0.0.1:1080"

# TCP 连接超时(秒)
timeout = 30

# 连接池最大连接数
max_connections = 100

# 可选: SOCKS5 认证
# username = "user"
# password = "pass"

[rules]
# 默认后端(当没有匹配规则时使用)
default_backend = "127.0.0.1:1080"

# 域名路由规则 (可选)
# 如果不需要特殊路由,可以不配置任何规则,所有流量都会使用 default_backend

[[rules.domain]]
# 精确匹配
pattern = "google.com"
backend = "127.0.0.1:1080"

[[rules.domain]]
# 通配符匹配
pattern = "*.googlevideo.com"
backend = "127.0.0.1:1080"

[[rules.domain]]
# 通配符匹配所有子域名
pattern = "*.google.com"
backend = "127.0.0.1:1080"
